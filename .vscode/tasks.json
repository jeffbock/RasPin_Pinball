{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Windows C/C++ single file EXE build",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fo${workspaceFolder}\\winbuild\\",
                "/Fe${fileDirname}\\..\\winbuild\\${fileBasenameNoExtension}.exe",
                "/Fd${fileDirname}\\..\\winbuild\\${fileBasenameNoExtension}.pdb",
                "${file}",
                "/link",
                "/LIBPATH:${workspaceFolder}\\src\\lib_ogl",
                "/LIBPATH:C:/Program Files (x86)/Windows Kits/10/Lib/10.0.26100.0/um/x64",
                "libegl.dll.lib",
                "libglesv2.dll.lib",
                "kernel32.lib",
                "user32.lib",
                "gdi32.lib",
                "winspool.lib",
                "comdlg32.lib",
                "advapi32.lib",
                "shell32.lib",
                "ole32.lib",
                "oleaut32.lib",
                "uuid.lib",
                "odbc32.lib",
                "odbccp32.lib",
                "/machine:x64"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe full build PInball",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fo${workspaceFolder}\\winbuild\\",
                "/Fe${workspaceFolder}\\winbuild\\PInball.exe",
                "/Fd${workspaceFolder}\\winbuild\\PInball.pdb",
                "${workspaceFolder}/src/schrift.c",
                "${workspaceFolder}/src/PBOGLES.cpp",
                "${workspaceFolder}/src/PBGfx.cpp",
                "${workspaceFolder}/src/PBWinRender.cpp",
                "${workspaceFolder}/src/PBRaspPiRender.cpp",
                "${workspaceFolder}/src/PInball.cpp",
                "/link",
                "/LIBPATH:${workspaceFolder}\\src\\lib_ogl",
                "/LIBPATH:C:/Program Files (x86)/Windows Kits/10/Lib/10.0.26100.0/um/x64",
                "libegl.dll.lib",
                "libglesv2.dll.lib",
                "kernel32.lib",
                "user32.lib",
                "gdi32.lib",
                "winspool.lib",
                "comdlg32.lib",
                "advapi32.lib",
                "shell32.lib",
                "ole32.lib",
                "oleaut32.lib",
                "uuid.lib",
                "odbc32.lib",
                "odbccp32.lib",
                "/machine:x64"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task to build PInball.cpp full project"
        }
    ]
}