        // Raspberry Pi: Full Build
        {
            "type": "cppbuild",
            "label": "Raspberry Pi: Full PInball Build",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "-o",
                "${workspaceFolder}/raspibuild/PInball",
                "${workspaceFolder}/src/stb_image.cpp",
                "${workspaceFolder}/src/PBOGLES.cpp",
                "${workspaceFolder}/src/PBGfx.cpp",
                "${workspaceFolder}/src/PBRaspPiRender.cpp",
                "${workspaceFolder}/src/PBDebounce.cpp",
                "${workspaceFolder}/src/PInball_IO.cpp",
                "${workspaceFolder}/src/Pinball_Table.cpp",
                "${workspaceFolder}/src/PInball.cpp",
                "-I${workspaceFolder}/src/include_ogl_raspi",
                "-I/usr/include/EGL",
                "-I/usr/include/GLES3",
                "-I/usr/include/KHR",
                "-I/usr/include/X11",
                "-I/usr/include/X11/extensions",
                "-lEGL",
                "-lGLESv2",
                "-lpthread",
                "-lm",
                "-lX11",
                "-lXrandr",
                "-lwiringPi"
            ],
            "options": {
