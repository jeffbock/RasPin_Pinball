{
    "version": "2.0.0",
    "tasks": [
        // Windows C/C++ single file EXE build
        {
            "type": "cppbuild",
            "label": "Windows: Single file build",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fo${workspaceFolder}/winbuild/",
                "/Fe${fileDirname}/../winbuild/${fileBasenameNoExtension}.exe",
                "/Fd${fileDirname}/../winbuild/${fileBasenameNoExtension}.pdb",
                "${file}",
                "/I${workspaceFolder}/src/include_ogl_win",
                "/link",
                "/LIBPATH:${workspaceFolder}/src/lib_ogl_win",
                "/LIBPATH:C:/Program Files (x86)/Windows Kits/10/Lib/10.0.26100.0/um/x64",
                "libegl.dll.lib",
                "libglesv2.dll.lib",
                "kernel32.lib",
                "user32.lib",
                "gdi32.lib",
                "winspool.lib",
                "comdlg32.lib",
                "advapi32.lib",
                "shell32.lib",
                "ole32.lib",
                "oleaut32.lib",
                "uuid.lib",
                "odbc32.lib",
                "odbccp32.lib",
                "/machine:x64"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Windows: Single file build"
        },

        // Raspberry Pi: Single File Build
        {
            "type": "cppbuild",
            "label": "Raspberry Pi: Single File Build",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "-o",
                "${workspaceFolder}/rpi_build/${fileBasenameNoExtension}",
                "${file}",
                "-I${workspaceFolder}/src/include_ogl_raspi",
                "-L${workspaceFolder}/src/lib_ogl_raspi"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Raspberry Pi: Single File Build"
        },

