    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug FontGen",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/winbuild/fontgen.exe", // Path to the compiled executable
            "args": ["./winbuild/Ubuntu-Regular.ttf", "24", "256"], // Arguments to pass to the program
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "preLaunchTask": "C/C++: cl.exe FontGen", // Ensure you have a build task configured
            "logging": {
                "engineLogging": true
            }
        },
        {
            "name": "Debug Pinball",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/winbuild/pinball.exe", // Path to the compiled executable for pinball.cpp
            "args": [], // Arguments to pass to the program, if any
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "preLaunchTask": "C/C++: cl.exe full build PInball", // Ensure you have a build task configured
            "logging": {
                "engineLogging": true
            }
        }
    ]
}