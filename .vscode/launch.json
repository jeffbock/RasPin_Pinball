{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "RasPi: Debug Pinball",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/raspibuild/Pinball", // Path to the compiled executable for pinball.cpp
            "args": [], // Arguments to pass to the program, if any
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "DISPLAY",
                    "value": ":0"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "preLaunchTask": "Raspberry Pi: Full Pinball Build", // Links to your Raspberry Pi build task
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "logging": {
                "engineLogging": false
            }
        },
        {
            "name": "RasPi: Debug FontGen",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/rpi_build/FontGen", // Path to the compiled FontGen executable
            "args": ["./src/resources/fonts/IMMORTAL.ttf", "60", "512", "4"], // Arguments for FontGen
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "preLaunchTask": "Raspberry Pi: FontGen Build", // Links to your Raspberry Pi FontGen build task
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "logging": {
                "engineLogging": false
            }
        },
        {
            "name": "Windows: Debug Pinball",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/winbuild/Pinball.exe", // Path to the compiled executable for pinball.cpp
            "args": [], // Arguments to pass to the program, if any
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "preLaunchTask": "Windows: Full Pinball Build", // Ensure you have a build task configured
            "logging": {
                "engineLogging": false
            }
        },
        {
            "name": "Windows: Debug FontGen",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/winbuild/FontGen.exe", // Path to the compiled executable
            "args": ["./winbuild/IMMORTAL.ttf", "60", "512", "4"], // Arguments to pass to the program
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "preLaunchTask": "Windows: FontGen Build", // Ensure you have a build task configured
            "logging": {
                "engineLogging": false
            }
        }
    ]
}